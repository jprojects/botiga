<?xml version="1.0" encoding="utf-8"?>
<extension version="3.5" type="plugin" group="botiga" method="upgrade">
	<name>plg_redsys</name>
	<author>Afi</author>
	<creationDate>May 2015</creationDate>
	<copyright>(C) 2019 Afi Inform√†tica. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>kim@aficat.com</authorEmail>
	<authorUrl>www.afi.cat</authorUrl>
	<version>3.0</version>
	<description>Redsys procesor for botiga component</description>
	<files>
		<filename plugin="redsys">redsys.php</filename>
		<folder>redsys</folder>
	</files>
	<languages folder="administrator/languages/en-GB">
			<language tag="en-GB">en-GB.plg_botiga_redsys.ini</language>
    </languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field 
					name="title"
					type="text"
					label="Title"
					description=""
					default="Redsys"
				/>
				<field 
					name="label"
					type="text"
					label="Etiqueta multillenguatge"
					description=""
					default="COM_BOTIGA_PLUGIN_REDSYS_TITLE"
				/>
				<field 
					name="alies"
					type="text"
					label="Alias"
					description=""
					default="Redsys"
					readonly="true"
				/>
				<field 
					name="description"
					type="text"
					label="Description"
					description=""
					default=""
				/>
				<field 
					name="sandbox"
					type="radio"
					label="Sandbox"
					description=""
					default="0"
					class="btn-group"
				>
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				<field 
					name="test_user"
					type="user"
					label="User"
					description="If any only the selected user can test de plugin in the frontend."
					default=""
				/>
				<field 
					name="logo"
					type="media"
					label="Logo del banc"
					description=""
					directory=""
					default=""
				/>
				<field 
					name="signature"
					type="text"
					label="Clau secreta"
					description=""
					default=""
				/>
				<field 
					name="code"
					type="text"
					label="MerchantCode"
					description=""
					default=""
				/>
				<field 
					name="terminal"
					type="text"
					label="terminal"
					description=""
					default="1"
				/>
				<field 
					name="currency"
					type="text"
					label="Currency"
					description=""
					default="978"
				/>
				<field 
					name="successURL"
					type="text"
					label="success url"
					description=""
					default="index.php?option=com_botiga&amp;view=checkout&amp;layout=success"
				/>
				<field 
					name="cancelURL"
					type="text"
					label="cancel url"
					description=""
					default="index.php?option=com_botiga&amp;view=checkout&amp;layout=cancel"
				/>
				<field 
					type="radio" 
					name="company_pay_percent" 
					default="0" 
					class="btn-group"
					label="Companies pay 50%" 
					description=""
				>
				<option value="0">JNO</option>
				<option value="1">JYES</option> 
		    	</field>
			</fieldset>	
		</fields>
	</config>
</extension>
