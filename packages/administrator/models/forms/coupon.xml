<?xml version="1.0" encoding="utf-8"?>
<form
        addrulepath="/administrator/components/com_botiga/models/rules"
>
	<fieldset name="details" addfieldpath="/administrator/components/com_botiga/models/fields">
		<field name="id"  type="text" class="readonly" label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" size="10" default="0" readonly="true"  
        />
        <field name="published" type="list" label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" class="inputbox"
			filter="intval" size="1" default="1"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
        <field name="category"
			type="list"
			label="Categoria"
			description=""
			required="true"
		>
			<option value="Milnor">Milnor</option>
			<option value="Foltex">Foltex</option>
			<option value="Pizzardi">Pizzardi</option>
			<option value="Laco">Laco</option>
			<option value="Helpi">Helpi</option>
			<option value="Others">Others</option>
		</field>
		<field name="homepage"
			type="radio"
			label="Homepage"
			description=""
			default="0"
			class="btn-group"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field
			name="title"
			type="text"
			label="TÃ­tulo"
			description=""
			size="40"
			class="inputbox"
			default=""
		/>
        <field name="image"
			type="media"
			hide_none="1"
			label="Imagen"
			description=""
			directory="/portaditas"
		/>  
		<field name="pdf_folleto"
			type="filelist"
			directory="images/pdf/docs/folletos"
			exclude="\.html$"
			label="Pdf Folletos"
			description=""
		/> 
		<field name="pdf_ficha"
			type="filelist"
			directory="images/pdf/docs/fichas"
			exclude="\.html$"
			label="Pdf Fichas"
			description=""
		/> 
		<field name="pdf_manual"
			type="filelist"
			directory="images/pdf/docs/manuales"
			exclude="\.html$"
			label="Pdf Manuales"
			description=""
		/> 
		<field 
			name="language" 
			type="language" 
			client="site" 
			default="en-GB" 
			label="COM_LAUNDRY_ITEM_LANGUAGE_LABEL" 
			description="COM_LAUNDRY_ITEM_LANGUAGE_DESC" 
		/>		
	</fieldset>
        <fields name="params">
		<fieldset
			name="params"
			label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS"
		>			
		</fieldset>
	</fields>
</form>
