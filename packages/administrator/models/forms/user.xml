<?xml version="1.0" encoding="utf-8"?>
<form
        addrulepath="/administrator/components/com_laundry/models/rules"
>
	<fieldset name="details" addfieldpath="/administrator/components/com_laundry/models/fields">
		<field 
			name="id"  
			type="text" 
			class="readonly" 
			label="JGLOBAL_FIELD_ID_LABEL"
			description ="JGLOBAL_FIELD_ID_DESC" 
			size="10" 
			default="0" 
			readonly="true"  
        />
        <field 
        	name="published" 
        	type="list" 
        	label="JSTATUS"
			description="JFIELD_PUBLISHED_DESC" 
			class="inputbox"
			filter="intval" 
			size="1" 
			default="1"
		>
			<option value="1">JPUBLISHED</option>
			<option value="0">JUNPUBLISHED</option>
		</field>
		<field 
        	name="type" 
        	type="list" 
        	label="JSTATUS"
			description="COM_BOTIGA_USER_TYPE_LABEL" 
			class="inputbox"
			filter="intval"  
			default="0"
		>
			<option value="0">COM_BOTIGA_TYPE_CUSTOMER</option>
			<option value="1">COM_BOTIGA_TYPE_COMPANY</option>
		</field>
        <field 
        	name="usergroup"
			type="usergrouplist"
			label="COM_BOTIGA_USER_USERGROUP_LABEL"
			description="COM_BOTIGA_USER_USERGROUP_DESC"
			default="11"
		/>
		<field 
			name="userid"
			type="user"
			label="COM_BOTIGA_USER_USERID_LABEL"
			description="COM_BOTIGA_USER_USERID_DESC"
			required="true"
		/>
        <field
			name="nom_empresa"
			type="text"
			label="COM_BOTIGA_USER_NAME_LABEL"
			description="COM_BOTIGA_USER_NAME_DESC"
			size="40"
			default=""
		/>
		<field
			name="mail_empresa"
			type="text"
			label="COM_BOTIGA_USER_MAIL_LABEL"
			description="COM_BOTIGA_USER_MAIL_DESC"
			size="40"
			default=""
		/>
		<field 
			name="cif" 
			type="text" 
			label="COM_BOTIGA_USER_CIF_LABEL" 
			description="COM_BOTIGA_USER_CIF_LABEL" 
			size="40"
			default=""
		/>
		<field 
			name="adreca" 
			type="text" 
			label="COM_BOTIGA_USER_ADRECA_LABEL" 
			description="COM_BOTIGA_USER_ADRECA_DESC" 
			size="40"
			default=""
		/>
		<field 
			name="cp" 
			type="text" 
			label="COM_BOTIGA_USER_CP_LABEL" 
			description="COM_BOTIGA_USER_CP_LABEL" 
			size="40"
			default=""
		/>
		<field 
			name="poblacio" 
			type="text" 
			label="COM_BOTIGA_USER_POBLACIO_LABEL" 
			description="COM_BOTIGA_USER_POBLACIO_DESC" 
			size="40"
			default=""
		/>	
		<field 
			name="provincia" 
			type="text" 
			label="COM_BOTIGA_USER_PROVINCIA_LABEL" 
			description="COM_BOTIGA_USER_PROVINCIA_DESC" 
			size="40"
			default=""
		/>	
		<field 
			name="pais" 
			type="sql" 
			label="COM_BOTIGA_USER_PAIS_LABEL" 
			description="COM_BOTIGA_USER_PAIS_DESC" 
			default=""
			query="SELECT country_id, country_name FROM #__botiga_countries"
    		key_field="country_id"
    		value_field="country_name"
		/>
		<field 
			name="telefon" 
			type="text" 
			label="COM_BOTIGA_USER_PHONE_LABEL" 
			description="COM_BOTIGA_USER_PHONE_DESC" 
			size="40"
			default=""
		/>
	</fieldset>
	<fieldset name="settings">
		<field 
			name="validate" 
			type="radio" 
			label="COM_BOTIGA_USER_VALIDATE_LABEL" 
			description="COM_BOTIGA_USER_VALIDATE_DESC" 
			size="40"
			default="0"
			class="btn-group"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field 
			name="metodo_pago" 
			type="plugins" 
			folder="botiga"
			description="COM_BOTIGA_USER_FIELD_METODO_PAGO_DESC"
			label="COM_BOTIGA_USER_FIELD_METODO_PAGO_LABEL" 
		>
			<option value="">COM_BOTIGA_SELECT_AN_OPTION</option>
		</field>
		<field 
			name="aplicar_iva" 
			type="radio" 
			label="COM_BOTIGA_USER_FIELD_APLICAR_IVA_LABEL" 
			description="COM_BOTIGA_USER_FIELD_APLICAR_IVA_DESC" 
			size="40"
			default="1"
			class="btn-group"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field 
			name="re_equiv" 
			type="radio" 
			label="COM_BOTIGA_USER_FIELD_RE_LABEL" 
			description="COM_BOTIGA_USER_FIELD_RE_DESC" 
			size="40"
			default="0"
			class="btn-group"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field 
			name="pago_habitual" 
			type="radio" 
			label="COM_BOTIGA_USER_FIELD_HABITUAL_LABEL" 
			description="COM_BOTIGA_USER_FIELD_HABITUAL_DESC" 
			size="40"
			default="0"
			class="btn-group"
		>
			<option value="0">JNO</option>
			<option value="1">JYES</option>
		</field>
		<field 
			name="pago_habitual_desc" 
			type="text" 
			label="COM_BOTIGA_USER_FIELD_HABITUAL_DESC_LABEL" 
			description="COM_BOTIGA_USER_FIELD_HABITUAL_DESC_DESC" 
			size="40"
			default=""
		/>
		<field 
			name="dte_linia" 
			type="text" 
			label="COM_BOTIGA_USER_PERC_DTE_LINIA_LABEL" 
			description="COM_BOTIGA_USER_PERC_DTE_LINIA_DESC" 
			size="40"
			default=""
		/>
	</fieldset>
    <fields name="params">
		<fieldset
			name="params"
			label="JGLOBAL_FIELDSET_DISPLAY_OPTIONS"
		>			
		</fieldset>
	</fields>
</form>
