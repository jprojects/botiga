<?xml version="1.0" encoding="utf-8"?>
<config>
  <fieldset name="botiga" label="COM_BOTIGA_SETTINGS" description="COM_BOTIGA_SETTINGS_DESC"> 
        <field 
        	type="text" 
        	name="botiga_name" 
        	default="Botiga" 
        	label="COM_BOTIGA_SETTINGS_NAME_LBL" 
        	description="COM_BOTIGA_SETTINGS_NAME_DSC" 
        />
        <field 
        	type="text" 
        	name="botiga_mal" 
        	default="" 
        	label="COM_BOTIGA_SETTINGS_MAIL_LBL" 
        	description="COM_BOTIGA_SETTINGS_MAIL_DSC" 
        />
        <field 
        	type="text" 
        	name="botiga_cif" 
        	default="Botiga" 
        	label="COM_BOTIGA_SETTINGS_CIF_LBL" 
        	description="COM_BOTIGA_SETTINGS_CIF_DSC" 
        />
        <field 
        	type="text" 
        	name="total_shipment" 
        	default="0" 
        	label="COM_BOTIGA_SETTINGS_TOTAL_SHIPMENT_LBL" 
        	description="COM_BOTIGA_SETTINGS_TOTAL_SHIPMENT_DSC" 
        />
        <field 
        	type="text" 
        	name="botiga_address" 
        	default="Botiga" 
        	label="COM_BOTIGA_SETTINGS_ADDRESS_LBL" 
        	description="COM_BOTIGA_SETTINGS_ADDRESS_DSC" 
        />
		<field 
        	type="radio" 
        	name="show_prices" 
        	default="1" 
        	class="btn-group"
        	label="COM_BOTIGA_SETTINGS_PRICES_LBL" 
        	description="COM_BOTIGA_SETTINGS_PRICES_DSC"
		>
		<option value="0">JNO</option>
		<option value="1">JYES</option> 
        </field>
        <field 
        	type="radio" 
        	name="show_ask" 
        	default="1" 
        	class="btn-group"
        	label="COM_BOTIGA_SETTINGS_ASK_LBL" 
        	description="COM_BOTIGA_SETTINGS_ASK_DSC"
		>
		<option value="0">JNO</option>
		<option value="1">JYES</option> 
        </field>
  </fieldset>
  <fieldset
		name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC"
	>
		<field
			name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			class="inputbox"
			validate="rules"
			filter="rules"
			component="com_botiga"
			section="component"
		/>
	</fieldset>
</config>
