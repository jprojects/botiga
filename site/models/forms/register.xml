<?xml version="1.0" encoding="utf-8"?>
<form>
	<fieldset name="register">		
		<field 
			name="empresa"  
			type="text" 
			label="COM_LAUNDRY_REGISTER_NOMBRE_EMPRESA_LBL"
			description="COM_LAUNDRY_REGISTER_NOMBRE_EMPRESA_DSC" 
			default="" 
			class="form-control" 
			required="true"
        />
		<field 
			name="cif"  
			type="text" 
			label="COM_LAUNDRY_REGISTER_CIF_LBL"
			description="COM_LAUNDRY_REGISTER_CIF_DSC" 
			default="" 
			class="form-control" 
			required="true"
        />        
		<field 
			name="tipo"  
			type="list" 
			label="COM_LAUNDRY_REGISTER_TIPOLOGIA_LBL"
			description="COM_LAUNDRY_REGISTER_TIPOLOGIA_DESC" 
			default=""
			class="form-control"  
			required="true"		 
        	>
			<option value="">COM_LAUNDRY_REGISTER_TIPOLOGIA_OPTION</option>
			<option value="HOSTELERIA" class="required">COM_LAUNDRY_REGISTER_HOSTELERIA</option>
			<option value="LAVANDERIA" class="required">COM_LAUNDRY_REGISTER_LAVANDERIA</option>
			<option value="DISTRIBUIDOR" class="required">COM_LAUNDRY_REGISTER_DISTRIBUIDOR</option>
			<option value="MECANICO" class="required">COM_LAUNDRY_REGISTER_MECANICO</option>
		</field>
		<field 
			name="nombre"  
			type="text" 
			label="COM_LAUNDRY_REGISTER_NOMBRE_LBL"
			description="COM_LAUNDRY_REGISTER_NOMBRE_DSC" 
			default="" 
			class="form-control" 
			required="true"
        />
        <field 
			name="phone"  
			type="text" 
			label="COM_LAUNDRY_REGISTER_PHONE_LBL"
			description="COM_LAUNDRY_REGISTER_PHONE_DSC" 
			default="" 
			class="form-control" 
			required="true"
        />
        <field 
			name="email1"  
			type="text" 
			label="COM_LAUNDRY_REGISTER_EMAIL_LBL"
			description="COM_LAUNDRY_REGISTER_EMAIL_DSC" 
			default="" 
			class="form-control validate-email" 
			field="id"
			required="true"
			unique="true"
			validate="email"
			autocomplete="email"
        />
        <field 
			name="email2"  
			type="text" 
			label="COM_LAUNDRY_REGISTER_EMAIL2_LBL"
			description="COM_LAUNDRY_REGISTER_EMAIL2_DSC" 
			default="" 
			class="form-control validate-email" 
			field="email1"
			required="true"
			validate="equals"
        />
        <field 
			name="password1"  
			type="password" 
			label="COM_LAUNDRY_REGISTER_PWD_LBL"
			description="COM_LAUNDRY_REGISTER_PWD_DSC" 
			default="" 
			class="form-control validate-password" 
			autocomplete="off"
			required="true"
			validate="password"
			field="password1"
        />
        <field 
			name="password2"  
			type="password" 
			label="COM_LAUNDRY_REGISTER_PWD2_LBL"
			description="COM_LAUNDRY_REGISTER_PWD2_DSC" 
			default="" 
			class="form-control validate-password" 
			autocomplete="off"
			field="password1"
			validate="equals"
			required="true"
        />
        <field 
			name="contacto"  
			type="radio" 
			label="COM_LAUNDRY_REGISTER_CONTACTO_LBL"
			description="COM_LAUNDRY_REGISTER_CONTACTO_DESC" 
			default="mail"  
			required="true"		 
        	>
			<option value="mail">COM_LAUNDRY_REGISTER_CONTACTO_MAIL</option>
			<option value="phone">COM_LAUNDRY_REGISTER_CONTACTO_PHONE</option>
		</field>
	</fieldset>
</form>
